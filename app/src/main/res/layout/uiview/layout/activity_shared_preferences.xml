<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilePersistence.SharedPreferencesActivity">

    <Button
        android:id="@+id/sava_data_sharedP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" save data into shared preference"/>
    <Button
        android:id="@+id/restore_data_sharedP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" restore data into shared preference"/>
    <Button
        android:id="@+id/create_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Database"/>
    <Button
        android:id="@+id/add_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Data"/>

</LinearLayout>