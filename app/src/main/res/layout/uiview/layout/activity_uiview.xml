<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".uiview.UIViewActivity">

    <Button
        android:id="@+id/anim_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ball_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/circle"/>

    <TextView
        android:id="@+id/anim_show_text"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="start animation"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryDark"/>


    <com.msi.studyonandroid.view.CustomCircleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.msi.studyonandroid.view.BasisView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAllCaps="true"
        android:text="TextView：末尾省略，所有字母大写, android, android,
            android, android, android, android, android"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textview: 邮件是 123456789@163.com, 电话是 13100000000"
        android:autoLink="email|phone"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:singleLine="true"
        android:text="syfdashdfsssssssssssssssssssssssssssss
        ssssssssssssssssssssssssssssssssssssssssssssssssssss
        ssssssssssssssssssssssssssssssssssssssssssssssssssss
        sssssssssssssssssssssssssssssssssssssssssssssssssss"/>



</LinearLayout>