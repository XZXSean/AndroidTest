<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="30dp"
    tools:context=".uiview.CalculatorActivity">

    <TextView
        android:id="@+id/cal_textview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="0"
        android:gravity="right|bottom"
        android:textSize="20dp"
        android:layout_margin="5dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:layout_gravity="center_horizontal"
        android:background="#E8E8E8">

        <Button
            android:id="@+id/cal_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="1"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="2"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="3"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="+"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="4"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="5"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="6"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="-"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="7"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="8"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="9"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="/"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="0"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn_is"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:text="="
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn_mul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:text="*"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cal_btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BCD2EE"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:text="CE"
            android:layout_margin="2dp"/>



    </GridLayout>


</LinearLayout>